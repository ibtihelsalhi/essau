# =====================================================
# PRESTIFY APPLICATION ENVIRONMENT CONFIGURATION
# =====================================================
# Configuration for LOCAL TESTING

# =====================================================
# APPLICATION SETTINGS
# =====================================================
APP_PORT=8080
APP_NAME=prestify
APP_ENV=local

# =====================================================
# DATABASE CONFIGURATION (MySQL)
# =====================================================
MYSQL_PORT=3306
MYSQL_DATABASE=prestify_db
MYSQL_USER=prestify_user
MYSQL_PASSWORD=prestify123
MYSQL_ROOT_PASSWORD=root123

# Hibernate/JPA Settings
JPA_DDL_AUTO=create-drop
JPA_SHOW_SQL=true
JPA_PROPERTIES_HIBERNATE_FORMAT_SQL=true
JPA_PROPERTIES_HIBERNATE_USE_SQL_COMMENTS=true

# =====================================================
# LOGGING CONFIGURATION
# =====================================================
LOG_LEVEL=DEBUG
LOGGING_FILE_NAME=logs/prestify.log
LOGGING_FILE_MAX_SIZE=10MB
LOGGING_FILE_MAX_HISTORY=30

# =====================================================
# MONITORING - PROMETHEUS
# =====================================================
PROMETHEUS_PORT=9090
PROMETHEUS_RETENTION=30d
METRICS_EXPORT_PROMETHEUS_ENABLED=true

# Spring Boot Actuator
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=health,metrics,prometheus
MANAGEMENT_ENDPOINT_HEALTH_SHOW_DETAILS=when-authorized
MANAGEMENT_METRICS_DISTRIBUTION_PERCENTILES_HISTOGRAM_HTTP_SERVER_REQUESTS_ENABLED=true

# =====================================================
# MONITORING - GRAFANA
# =====================================================
GRAFANA_PORT=3000
GRAFANA_USER=admin
GRAFANA_PASSWORD=grafana123
GF_SECURITY_ADMIN_PASSWORD=grafana123
GF_USERS_ALLOW_SIGN_UP=false
GF_INSTALL_PLUGINS=

# =====================================================
# LOGGING AGGREGATION - LOKI
# =====================================================
LOKI_PORT=3100
LOKI_RETENTION=720h

# =====================================================
# LOG COLLECTION - PROMTAIL
# =====================================================
PROMTAIL_PORT=9080

# =====================================================
# SPRING SECURITY (If using JWT/OAuth2)
# =====================================================
JWT_SECRET=local_jwt_secret_key_for_testing
JWT_EXPIRATION=86400000

# =====================================================
# AWS DEPLOYMENT SETTINGS (For AWS EC2)
# =====================================================
AWS_REGION=eu-west-1
AWS_EC2_INSTANCE_ID=i-xxxxxxxxx
AWS_EC2_PUBLIC_IP=localhost

# =====================================================
# DOCKER COMPOSE
# =====================================================
COMPOSE_PROJECT_NAME=prestify
COMPOSE_FILE=docker-compose.yml

# =====================================================
# TIMEZONE
# =====================================================
TZ=Europe/Paris

# =====================================================
# PERFORMANCE TUNING
# =====================================================
# JVM Heap Size
JAVA_OPTS=-Xms512m -Xmx1024m

# Connection Pool
SPRING_DATASOURCE_HIKARI_MAXIMUM_POOL_SIZE=20
SPRING_DATASOURCE_HIKARI_MINIMUM_IDLE=5
SPRING_DATASOURCE_HIKARI_CONNECTION_TIMEOUT=20000